<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#151515"
        android:orientation="vertical"
        tools:context=".Home">

        <!-- Group to the side (Horizontal LinearLayout) -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingHorizontal="10dp">

            <!-- Button -->
            <Button
                android:id="@+id/btnPremium"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:backgroundTint="#414141"
                android:drawableLeft="@drawable/premium"
                android:drawablePadding="10dp"
                android:gravity="start"
                android:padding="12dp"
                android:text="Premium"
                android:textColor="#ffffff"
                android:textSize="12sp"
                app:rippleColor="#9A9A9A" />

            <!-- Spacer to create space between elements -->
            <View
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- ImageButton -->
            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:backgroundTint="@android:color/transparent"
                android:scaleType="centerCrop"
                android:src="@drawable/profilepic" />
        </LinearLayout>



        <!-- ImageView for Hero Section -->
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/hero"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp" />

        <!-- Search Bar Section (Vertical LinearLayout) -->
        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/bg_search_bar"
            android:padding="8dp">

            <ImageView
                android:id="@+id/searchIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="9dp"
                android:src="@drawable/ic_search"
                app:tint="#A0A0A0" />

            <EditText
                android:id="@+id/searchEditText"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@id/searchIcon"
                android:background="@android:color/transparent"
                android:hint="Pencarian"
                android:inputType="text"
                android:padding="0dp"
                android:textColor="@color/white"
                android:textColorHint="#A0A0A0" />
        </RelativeLayout>

        <!-- Group Downwards (Vertical LinearLayout) -->
        <LinearLayout
            android:id="@+id/btntoinfofilm"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="10dp">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="170dp"
                android:layout_height="107dp"
                android:src="@drawable/lastwatch" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last Watched"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dune"
                    android:textColor="#979797" />

            </LinearLayout>

        </LinearLayout>

        <!-- Genre Section -->
        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Genre"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="10dp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/filter"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="10dp" />

        <!-- Popular on iMovie Section -->
        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Popular on iMovie"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="10dp" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/populer"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp" />

        <!-- Film Section -->
        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:text="Film"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="10dp" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/film"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp" />

        <!-- Anime Section -->
        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anime"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="10dp"/>

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/anime"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp" />

        <!-- Spacer to create space between elements -->
        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="100dp"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>